{
  "name": "@glaze/backend",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepack": "pnpm prisma:generate",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:init": "pnpm exec prisma init",
    "prisma:pull": "pnpm exec prisma db pull",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:push": "pnpm exec prisma db push --accept-data-loss",
    "prisma:migrate": "pnpm exec prisma migrate dev",
    "logserver:watch": "esbuild logServer/index.ts --outfile=logServer/dist/index.js --watch --bundle --sourcemap --platform=node --external:./node_modules/*",
    "logserver:debug": "nodemon --inspect=127.0.0.1:9219 logServer/dist/index.js",
    "logserver:dev": "concurrently -k \"pnpm logserver:watch\" \"pnpm logserver:debug\""
  },
  "dependencies": {
    "@glaze/common": "workspace:*",
    "@nestjs/bull": "^0.5.3",
    "@nestjs/common": "^8.2.6",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.2.6",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-fastify": "^8.4.0",
    "@nestjs/websockets": "^8.4.0",
    "@prisma/client": "^3.11.0",
    "bcrypt": "^5.0.1",
    "bull": "^4.7.0",
    "cos-nodejs-sdk-v5": "^2.11.6",
    "fastify-static": "^4.5.0",
    "ioredis": "4.28.5",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "point-of-view": "^5.1.0",
    "pug": "^3.0.2",
    "puppeteer": "^13.5.1",
    "qcloud-cos-sts": "^3.0.6",
    "query-string": "^7.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.2",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.6",
    "@types/bcrypt": "^5.0.0",
    "@types/bull": "^3.15.8",
    "@types/ioredis": "^4.28.10",
    "@types/passport-jwt": "^3.0.6",
    "@types/puppeteer": "^5.4.5",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^8.5.2",
    "esbuild": "^0.14.25",
    "liquibase": "^4.4.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prisma": "^3.11.0",
    "serialize-error": "^8.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-loader": "^9.2.6",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
